<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="../../style.css" rel="stylesheet" type="text/css" />
    <link rel=stylesheet href="../css/styles.css">
    <title>Wall Beds</title>
    <link rel="shortcut icon"
        href="https://upload.wikimedia.org/wikipedia/en/thumb/e/e1/MissionImpossiblePoster.jpg/220px-MissionImpossiblePoster.jpg" />
</head>

<body>
    <div class="col-span-10">
        <div class="flex items-center justify-center">
            <div class="container">
                <table class="w-full sm:bg-white rounded-lg overflow-hidden sm:shadow-lg my-5">
                    <thead>
                        <tr
                            class="bg-blue-200 font-serif text-gray-800 flex flex-col flex-nowrap sm:table-row rounded-l-lg sm:rounded-none mb-2 sm:mb-0">
                            <th class="p-3 text-left">ID</th>
                            <th class="p-3 text-left">Title</th>
                            <th class="p-3 text-left">Cost</th>
                            <th class="p-3 text-left">Description</th>
                            <th class="p-3 text-left">Date</th>
                            <th class="p-3 text-left">Image</th>
                            <th class="p-3 text-left">Property</th>
                            <th class="p-3 text-left">Tags</th>
                            <th class="p-3 text-left">Stock</th>
                            <th class="p-3 text-left">Height</th>
                            <th class="p-3 text-left">Width</th>
                            <th class="p-3 text-left">View</th>
                            <th class="p-3 text-left">Edit</th>
                            <th class="p-3 text-left">Delete</th>
                            <th class="p-3 text-left whitespace-nowrap">Add to Cart</th>
                        </tr>
                    </thead>
                    <tbody class="flex-1 sm:flex-none font-extralight">
                        {{#each posters}}
                        <tr class="flex flex-col flex-no wrap sm:table-row mb-2 sm:mb-0">
                            <td class="border hover:bg-gray-100 p-3">{{this.id}}</td>
                            <td class="border hover:bg-gray-100 p-3">{{this.title}}</td>
                            <td class="border hover:bg-gray-100 p-3">{{this.cost}}</td>
                            <td class="border hover:bg-gray-100 p-3">{{this.description}}</td>
                            <td class="border hover:bg-gray-100 p-3">{{this.date}}</td>
                            <td class="border hover:bg-gray-100 p-3">
                                {{#if this.image_url_thumb}}
                                <img src="{{this.image_url_thumb}}" alt="poster" class="w-full" />
                                {{else}}
                                No Image
                                {{/if}}
                            </td>
                            <td class="border hover:bg-gray-100 p-3">{{this.mediaProperty.name}}</td>
                            <td class="border hover:bg-gray-100 p-3">
                                <ul>
                                    {{#each this.tags}}
                                    <span
                                        class="inline-flex items-center justify-center px-2 py-1 my-1 text-xs font-bold leading-none text-indigo-100 bg-indigo-700 rounded-full">
                                        <li>
                                            {{this.name}}
                                        </li>
                                    </span>
                                    {{/each}}
                                </ul>
                            </td>
                            <td class="border hover:bg-gray-100 p-3">{{this.stock}}</td>
                            <td class="border hover:bg-gray-100 p-3">{{this.height}}</td>
                            <td class="border hover:bg-gray-100 p-3">{{this.width}}</td>
                            <td class="border bg-yellow-200 hover:bg-green-400 hover:font-normal p-3">
                                <a href="/posters/{{this.id}}">
                                    View
                                </a>
                            </td>
                            <td class="border bg-yellow-200 hover:bg-blue-400 hover:font-normal p-3">
                                <a href="/posters/{{this.id}}/edit">
                                    Edit
                                </a>
                            </td>
                            <td class="border bg-yellow-200 hover:bg-red-400 hover:font-normal p-3">
                                <a href="/posters/{{this.id}}/delete">
                                    Delete
                                </a>
                            </td>
                            <td class="border bg-green-100 hover:bg-green-400 hover:font-normal p-3 whitespace-nowrap">
                                <a href="/cart/{{this.id}}/add">
                                    Add to Cart
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="container p-1 mt-4 flex justify-end">
            <a href="/posters/create"
                class="p-3 m-1 text-sm bg-green-400 rounded-full text-white hover:text-black hover:bg-green-200">
                Add New Poster
            </a>
        </div>
    </div>
    </div>

    <div>
        {{#if user}}
        Hi, {{user.username}}
        <a href="/cart" class="btn btn-success btn-sm">Cart</a>
        <a href="/users/logout" class="btn btn-secondary btn-sm">Logout</a>
        {{else}}
        Welcome, Administrator.
        <a href="/users/login" class="btn btn-primary btn-sm">Login</a>
        <a href="/register" class="btn btn-primary btn-sm">Register</a>
        {{/if}}

    </div>

    </nav>

    {{#if success_messages}}
    {{#each success_messages}}
    <div class="alert alert-success">
        {{this}}
    </div>
    {{/each}}
    {{/if}}

    {{#if error_messages}}
    {{#each error_messages}}
    <div class="alert alert-danger">
        {{this}}
    </div>
    {{/each}}
    {{/if}}

    {{#block 'content'}}{{/block}}
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

    {{#block 'js'}}

    {{/block}}
</body>

</html>