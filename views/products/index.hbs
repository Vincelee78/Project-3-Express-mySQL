{{#extends 'base'}}

{{#block 'content'}}
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Cost</th>
            <th>Description</th>
            <th>Date</th>
            <th>Stock</th>
            <th>Height</th>
            {{!-- <th>Width</th> --}}
            <th>Media Property</th>
        </tr>

    </thead>
    <tbody>
        {{#each products4}}
            <tr>
                <td>
                    {{this.id}}
                </td>
                <td>
                    {{this.title}}
                </td>
                <td>
                    {{this.cost}}
                </td>
                <td>
                    {{this.description}}
                </td>
                <td>
                    {{this.date}}
                </td>
                <td>
                    {{this.stock}}
                </td>
                <td>
                    {{this.height}}
                </td>
                {{!-- <td>
                    {{this.width}}
                </td> --}}
                
                <td>
                    {{this.MediaProperty.name}}
                </td>

                <td>
                    <a href="/update/{{this.id}}" class="btn btn-primary btn-sm">Update</a>
                    <br/><br/>
                    <a href="/delete/{{this.id}}" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>

        {{/each}}

    </tbody>
</table>
{{/block}}

{{/extends}}
