{{#extends 'base'}}

{{#block 'content'}}


<div class="container">
    <div class="row">

        <div class="col-sm-2">
            <b>
                <p style="font-size: 20px;">Search Wall Beds</p>
            </b>

            <form method="GET" class="">
                <input type="hidden" name="_csrf" value="{{csrfToken}}" />
                <h3 class="m-1 mt-3 pl-3 font-serif font-bold">Advanced Filter: </h3>
                <div class="m-1 pl-3 pr-2 flex">
                    <button type="submit" class="text-white bg-green-400 active:bg-green-700 px-2 rounded-3">Filter
                        Wall Beds</button>
                    <a href="/" class="btn btn-primary bg-yellow-400 active:bg-blue-700 px-2 ml-2 rounded-3">Reset</a>
                </div>
                <div class="m-1 pl-3 pr-2 font-light text-sm">Enter filter and click
                    <b>Filter Wall Beds</b>
                    to filter. Click
                    <b>Reset</b>
                    to reset filters.
                </div>

                {{{searchForm}}}

                <input type="submit" class="btn btn-primary btn-sm my-3" value="Search" />
            </form>

        </div>

        <div class="col-sm-10">

            <table class="w-full sm:bg-white rounded-lg overflow-hidden sm:shadow-lg">

                <thead>
                    <tr
                        class="bg-blue-200 font-serif text-gray-800 flex flex-col flex-nowrap sm:table-row rounded-l-lg sm:rounded-none mb-2 sm:mb-0">
                        <th class="border" style="text-align:center">ID</th>
                        <th class="border" style="width: 150px; text-align:center">Name</th>
                        <th class="border" style="text-align:center">Weight</th>
                        <th class="border ps-4" style="width: 1000px; text-align:center">Description</th>
                        <th class="border" style="width: 100px; text-align:center">Stock</th>
                        <th class="border" style="text-align:center">Date Created</th>
                        <th class="border" style="width: 100px ; text-align:center">Bed Size</th>
                        <th class="border" style="width: 120px ; text-align:center">Mattress Type</th>
                        <th class="border" style="width: 150px">Bed Orientation</th>
                        <th class="border" style="text-align:center">Frame Colour</th>
                        <th class="border" style="width: 100px ; text-align:center">Wood Panel Colours</th>
                        <th class="border" style="width: 120px; text-align:center">Cost in dollars</th>
                        <th class="border" style="width: 300px; text-align:center">Image</th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td class="border hover:bg-gray-100" style="width: 50px; text-align:center">
                            {{this.id}}
                        </td>
                        <td class="border hover:bg-gray-100">
                            {{this.name}}
                        </td>
                        <td class="border hover:bg-gray-100" style="text-align:center">
                            {{this.weight}}kg
                        </td>
                        <td class="border hover:bg-gray-100 ps-4 pb-4 pt-3">
                            {{this.description}}
                        </td>

                        <td class="border hover:bg-gray-100" style="text-align:center">
                            {{this.stock}}
                        </td>
                        <td class="border hover:bg-gray-100">
                            {{this.date}}
                        </td>
                        <td class="border hover:bg-gray-100" style="text-align:center">
                            {{this.bedSize.name}}
                        </td>
                        <td class="border hover:bg-gray-100" style="text-align:center">
                            {{this.mattressType.name}}
                        </td>
                        <td class="border hover:bg-gray-100" style="text-align:center">
                            {{this.bedOrientation.name}}
                        </td>

                        <td class="border hover:bg-gray-100">
                            {{this.frameColour.name}}
                        </td>

                        <td class="border hover:bg-gray-100" style="text-align:center">
                            {{#each this.woodColour}}
                            <span class="badge bg-success">{{this.name}}</span>
                            {{/each}}
                        </td>
                        <td class="border hover:bg-gray-100" style="text-align:center">
                            ${{this.cost}}
                        </td>
                        <td>
                            <img class="img-fluid p-2" src="{{this.image_url}}" />
                        </td>

                    </tr>

                    {{/each}}

                </tbody>
            </table>

        </div>
    </div>
</div>
{{/block}}

{{/extends}}